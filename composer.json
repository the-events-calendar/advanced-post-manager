{
  "name": "the-events-calendar/advanced-post-manager",
  "description": "Dialing custom post types to 11 with advanced filtering controls.",
  "type": "wordpress-plugin",
  "license": "GPLv2 or later",
  "authors": [
    {
      "name": "The Events Calendar"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "platform": {
      "php": "7.4.0"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "automattic/vipwpcs": "^3.0",
    "behat/gherkin": "^4.8.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "illuminate/collections": "^8.0",
    "illuminate/support": "^8.0",
    "lucatume/wp-browser": "^3.0 <3.5",
    "stellarwp/coding-standards": "dev-main",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "wp-coding-standards/wpcs": "3.0"
  },
  "autoload-dev": {
    "files": [
      "tests/_autoload.php"
    ]
  },
  "allow-plugins": {
    "phpstan/extension-installer": true,
    "dealerdirect/phpcodesniffer-composer-installer": true
  },
  "scripts": {
    "analyze": [
      "phpstan analyse -c phpstan.neon.dist --memory-limit=1024M"
    ],
    "pup": [
      "Composer\\Config::disableProcessTimeout",
      "test -f ./bin/pup.phar || curl -o ./bin/pup.phar -L -C - https://github.com/stellarwp/pup/releases/download/1.3.8/pup.phar",
      "@php bin/pup.phar"
    ]
  }
}
